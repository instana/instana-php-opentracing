{
  "name": "instana/instana-php-opentracing",
  "homepage": "http://instana.com",
  "description": "Instana Opentracing Client",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Gordon Oheim",
      "email": "gordon.oheim@instana.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/instana/instana-php-opentracing",
    "issues": "https://github.com/instana/instana-php-opentracing/issues",
    "docs": "https://docs.instana.io/ecosystem/open_tracing/"
  },
  "autoload": {
    "files": ["./src/Instana/OpenTracing/InstanaTags.php"],
    "psr-4": {
      "Instana\\OpenTracing\\": "src/Instana/OpenTracing"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Instana\\OpenTracing\\": "test/Instana/OpenTracing"
    }
  },
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "aws/aws-sdk-php": "^3.155",
    "opentracing/opentracing": "^1@beta",
    "paragonie/random_compat": "<9.99"
  },
  "require-dev": {
    "phpunit/phpunit": "^6",
    "phake/phake": "^3.0"
  },
  "suggest": {
    "ext-posix": "To be able to retrieve the process id more efficiently",
    "aws/aws-sdk-php": "To be able to automatically wrap SQS transactions in a span"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
